@model AspBlogSitesi.WebUI.Areas.Admin.Models.DashboardViewModel
@{
    ViewData["Title"] = "Home Page";
}
<header class="page-header">
    <h2>Anasayfa</h2>

    <div class="right-wrapper pull-right">
        <ol class="breadcrumbs">
            <li>
                <a asp-area="Admin" asp-controller="Home" asp-action="Index">
                    <i class="fa fa-home"></i>
                </a>
            </li>
            <li><span>Anasayfa</span></li>
            <li><span>Admin</span></li>
        </ol>

        <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fa fa-chevron-left"></i></a>
    </div>
</header>
<div class="row">
    <div class="col-md-12 col-lg-6 col-xl-6">
        <section class="panel panel-featured-left panel-featured-primary">
            <div class="panel-body">
                <div class="widget-summary">
                    <div class="widget-summary-col widget-summary-col-icon">
                        <div class="summary-icon bg-primary">
                            <i class="fa fa-life-ring"></i>
                        </div>
                    </div>
                    <div class="widget-summary-col">
                        <div class="summary">
                            <h4 class="title">Kategoriler</h4>
                            <div class="info">
                                <strong class="amount">@Model.CategoriesCount</strong>
                                <span class="text-primary">(14 unread)</span>
                            </div>
                        </div>
                        <div class="summary-footer">
                            <a class="text-muted text-uppercase" asp-area="Admin" asp-controller="Category" asp-action="Index">(view all)</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <div class="col-md-12 col-lg-6 col-xl-6">
        <section class="panel panel-featured-left panel-featured-secondary">
            <div class="panel-body">
                <div class="widget-summary">
                    <div class="widget-summary-col widget-summary-col-icon">
                        <div class="summary-icon bg-secondary">
                            <i class="fa fa-usd"></i>
                        </div>
                    </div>
                    <div class="widget-summary-col">
                        <div class="summary">
                            <h4 class="title">Makaleler</h4>
                            <div class="info">
                                <strong class="amount">@Model.ArticlesCount</strong>
                            </div>
                        </div>
                        <div class="summary-footer">
                            <a class="text-muted text-uppercase" asp-area="Admin" asp-controller="Article" asp-action="Index">(withdraw)</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <div class="col-md-12 col-lg-6 col-xl-6">
        <section class="panel panel-featured-left panel-featured-tertiary">
            <div class="panel-body">
                <div class="widget-summary">
                    <div class="widget-summary-col widget-summary-col-icon">
                        <div class="summary-icon bg-tertiary">
                            <i class="fa fa-shopping-cart"></i>
                        </div>
                    </div>
                    <div class="widget-summary-col">
                        <div class="summary">
                            <h4 class="title">Kulanıcılar</h4>
                            <div class="info">
                                <strong class="amount">@Model.UsersCount</strong>
                            </div>
                        </div>
                        <div class="summary-footer">
                            <a class="text-muted text-uppercase" asp-area="Admin" asp-controller="User" asp-action="Index">(statement)</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <div class="col-md-12 col-lg-6 col-xl-6">
        <section class="panel panel-featured-left panel-featured-quartenary">
            <div class="panel-body">
                <div class="widget-summary">
                    <div class="widget-summary-col widget-summary-col-icon">
                        <div class="summary-icon bg-quartenary">
                            <i class="fa fa-user"></i>
                        </div>
                    </div>
                    <div class="widget-summary-col">
                        <div class="summary">
                            <h4 class="title">Yorumlar</h4>
                            <div class="info">
                                <strong class="amount">@Model.CommentsCount</strong>
                            </div>
                        </div>
                        <div class="summary-footer">
                            <a class="text-muted text-uppercase" asp-area="Admin" asp-controller="Comment" asp-action="Index">(report)</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <section class="panel">
            <div class="panel-body">
                <div >
                    <table class="table table-bordered mb-none" id="articlesTable">
                        <thead>
                            <tr>
                                <th>Resim</th>
                                <th>Kategori</th>
                                <th>Başlık</th>
                                <th>Tarih</th>
                                <th>Okunma</th>
                                <th>Yorum</th>
                                <th>Aktif</th>
                                <th>Silindi</th>
                            </tr>
                        </thead>
                        <tbody>
                           @foreach (var item in Model.Articles.Articles)
                           {
                               <tr>
                                   <td><img src="~/Admin/image/@item.Thumbnail" class="my-img-table" /></td>
                                   <td>@item.Category.Name</td>
                                   <td>@item.Title</td>
                                   <td>@item.Date.ToShortDateString()</td>
                                   <td>@item.ViewCount</td>
                                   <td>@item.CommentCount</td>
                                   <td>@(item.IsActive?"Evet":"Hayır")</td>
                                   <td>@(item.IsDeleted?"Evet":"Hayır")</td>
                               </tr>
                           }
                        </tbody>
                    </table>
                </div>
            </div>
        </section>
    </div>
    
</div>

@section Scripts{ 
    <script src="~/Admin/js/homeIndex.js" type="application/ecmascript"></script>
}
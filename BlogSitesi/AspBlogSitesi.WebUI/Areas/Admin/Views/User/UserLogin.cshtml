@model AspBlogSitesi.Entities.Dtos.UserLoginDto
@{
    ViewData["Title"] = "Giriş Yap";
    Layout = "~/Areas/Admin/Views/Shared/_UserLoginLayout.cshtml";
}

<div class="panel panel-sign">
    <div class="panel-title-sign mt-xl text-right">
        <h2 class="title text-uppercase text-bold m-none"><i class="fa fa-user mr-xs"></i> Giriş Yap</h2>
    </div>
    <div class="panel-body">
        <form asp-controller="User" asp-action="Login" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label class="col-form-label" asp-for="Email"></label>
                <input type="text" asp-for="Email" class="form-control input-lg" placeholder="Lütfen kullanıcı adınızı giriniz" value="ekiznurettin@hotmail.com" />
                <span class="custom-control-label text-danger" asp-validation-for="Email"> </span>
            </div>

            <div class="form-group mb-lg">
                <label class="pull-left" asp-for="Password"></label>
                <div class="clearfix">
                    <a href="pages-recover-password.html" class="pull-right">Şifremi Unuttum</a>
                </div>
                <input type="password" asp-for="Password" class="form-control input-lg" placeholder="Lütfen parolanızı giriniz" value="123456" />
                <span class="custom-control-label text-danger" asp-validation-for="Password"> </span>
            </div>

            <div class="row">
                <div class="col-sm-8">
                    <div class="checkbox-custom checkbox-default">
                        <input id="RememberMe" asp-for="RememberMe" type="checkbox" />
                        <label for="RememberMe" asp-for="RememberMe"></label>
                    </div>
                </div>
                <div class="col-sm-4 text-right">
                    @*<button type="submit" class="btn btn-primary hidden-xs">Kayıt Ol</button>*@
                    <button type="submit" class="btn btn-primary">Giriş Yap</button>
                </div>
            </div>

            <span class="mt-lg mb-lg line-thru text-center text-uppercase">
                <span>or</span>
            </span>

            <div class="mb-xs text-center">
                <a class="btn btn-facebook mb-md ml-xs mr-xs">Facebook İle Giriş Yap <i class="fa fa-facebook"></i></a>
                <a class="btn btn-twitter mb-md ml-xs mr-xs">Twitter İle Giriş Yap <i class="fa fa-twitter"></i></a>
            </div>

            <p class="text-center">Hesabınız yok mu? <a href="/">Kayıt Ol!</a>

        </form>
    </div>
</div>

